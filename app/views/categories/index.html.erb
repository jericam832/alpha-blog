<!-- row of photos related to categories -->
<h1 class="page-title" align="center">All Categories <i class="fa fa-list-alt"></i></h1>


<div class="row">
  <div class="col-xs-6 col-xs-offset-3" id="categories">
        <div class="panel panel-default">
          <div class="panel-heading">
              <h3>Categories </h3>
             </div>
          <div class="panel-body">
            <p>Here is the list of Alpha Blog topics...</p>
              <ul class="list-group">
                <% @categories.each do |category| %>
                 <li id="cat-list" class="list-group-item">
                    <%= link_to "#{category.name}", category_path(category) %>
                  <span class="badge"><%= (category.articles.count) %></span>
                  </li>
              <% end %>
            </ul>
          </div>
        </div>
    </div>
</div>
    <%= will_paginate %>

    
