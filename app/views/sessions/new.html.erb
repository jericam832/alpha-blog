<h1 align="center" id="page-title">Blogger Login <i class="fa fa-user-circle" aria-hidden="true"></i></h1>
<hr>
</br>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
        
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <%= f.label :email, "Email:" %> 
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
            </div>
        </div>
         <div class="form-group">
            <!--<div class="control-label">-->
    
            <!--</div>-->
            <div class="col-md-6 col-md-offset-3">
                <%= f.label :password, "Password:" %>
                <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="text-center">
                <%= f.submit "Login", class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
        
        <% end %>
        <div class="text-center">
            [ <%= link_to "Go Back", articles_path %> | New User? <%= link_to "Sign-up", signup_path %>  ]  
        </div>