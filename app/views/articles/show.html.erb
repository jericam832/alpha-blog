<h2 align="center"> "<%= @article.title %>" </h2>
<div class="well col-xs-8 col-xs-offset-2">
    <% if @article.user %>
        <ul class="listing" align="center">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <li>Created by:</li>
                    <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
                    <li class="article-title">
                    <%= link_to @article.user.username, user_path(@article.user) %>
                    </li>
                    <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
                </div>
            </div>
        </ul>
    <% end %>
    <h4 class="center description"><strong>Description:</strong></h4>
    <hr>
    <%= simple_format(@article.description) %>
    <% if logged_in? &&  (current_user == @article.user || current_user.admin?) %>
        <div class="article-actions" align="right">
            <%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-xs btn-info" %>
            <%= link_to "Delete Article", article_path(@article), method: :delete,
                                            data: { confirm: "Are you sure you want to delete the article?"},
                                            class: "btn btn-xs btn-danger" %>
    <% end %>
            <%= link_to "Back to All Articles", articles_path, class: "btn btn-xs btn-success" %>
        </div>
</div>