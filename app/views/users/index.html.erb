<div class="jumbotron" id="users-head">
    <div class="container">
        <h1 class="page-title"> <i class="fa fa-users"></i> All Alpha Bloggers </h1>
        <p>Checkout what your fellow Alpha Bloggers are up to.</p>
      
    </div>
</div>
<div class="container-fluid" id="user-grid">
    <div class="row">
        <% @users.each do |user| %>
        <div class="col-xs-6 col-sm-4">
            <div class="thumbnail">
                <div align="center">
                    <%= link_to gravatar_for(user), user_path(user) %>  
                </div>
                <div class="caption text-center">
                    <h3 id="user-link"><%= link_to user.username, user_path(user) %></h3>
                    <p id="article-count"><%= pluralize(user.articles.count, "article") if user.articles %> </p>
                    
                    <p><% if logged_in? and current_user.admin? %>
                            <%= link_to "Edit User", edit_user_path(user), class: "btn btn-xs btn-success" %>
                            <%= link_to "Delete User", user_path(user) , method: :delete,
                             data: {confirm: "Are you sure you want to delete this user account and all of their articles?"}, class: "btn btn-danger btn-xs" %>
                        <% end %>
                    </p>
                </div>
            </div>
        </div>
        <% end %>
    </div>
     <div class="row">
        <div class="col-md-6 col-md-offset-5">
           <%= will_paginate %>
        </div>
    </div>
</div>

    


